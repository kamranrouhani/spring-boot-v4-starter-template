# Database Configuration
DB_NAME=templatedb
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# Application Configuration
APP_PORT=8080
SHOW_SQL=false

# Adminer Configuration
ADMINER_PORT=8081

# Spring Profile (optional: dev, prod)
SPRING_PROFILES_ACTIVE=dev
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# JWT Configuration (REQUIRED - generate with: openssl rand -base64 32)
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_EXPIRATION=86400000

# H2 Console (only for local development without Docker)
H2_CONSOLE_ENABLED=true

# Swagger/OpenAPI Documentation (disable in production for security)
SPRINGDOC_ENABLED=true

# Logging Levels
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING_WEB=INFO
LOG_LEVEL_SPRING_SECURITY=DEBUG
LOG_LEVEL_HIBERNATE_SQL=DEBUG
LOG_LEVEL_HIBERNATE_BINDER=TRACE
LOG_LEVEL_SPRING_BOOT=INFO
LOG_LEVEL_HIKARI=INFO

# Server Port (usually same as APP_PORT)
SERVER_PORT=8080

# Flyway
FLYWAY_ENABLED=true
FLYWAY_BASELINE_ON_MIGRATE=true
FLYWAY_VALIDATE_ON_MIGRATE=true