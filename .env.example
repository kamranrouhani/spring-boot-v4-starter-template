# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=templatedb
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_PORT=8080
SHOW_SQL=false

# =============================================================================
# ADMINER CONFIGURATION
# =============================================================================
ADMINER_PORT=8081

# =============================================================================
# SPRING CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=dev
SPRINGDOC_ENABLED=true

# =============================================================================
# JPA/HIBERNATE CONFIGURATION
# =============================================================================

# Disable Hibernate schema management.
# Flyway is the single source of truth for schema changes.
# PROD: validate
SPRING_JPA_HIBERNATE_DDL_AUTO=none


# =============================================================================
# FLYWAY CONFIGURATION
# =============================================================================

# Enable Flyway migration support.
# PROD: true
SPRING_FLYWAY_ENABLED=true

# Allow Flyway to DROP all schemas.
# REQUIRED for local/dev reset.
# PROD: MUST be true (never allow clean in prod)
SPRING_FLYWAY_CLEAN_DISABLED=false

# Explicitly trigger a clean + migrate on application startup.
# Requires FlywayMigrationStrategy bean.
# PROD: false
SPRING_FLYWAY_CLEAN_ON_STARTUP=true

# Disable validation so checksum mismatches do not fail startup.
# Allows editing V1 migrations freely in dev.
# PROD: true
SPRING_FLYWAY_VALIDATE_ON_MIGRATE=false

# If Flyway metadata is missing, mark current schema as baseline.
# Useful for dev resets and experimentation.
# PROD: false
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true

# =============================================================================
# EMAIL CONFIGURATION - MAILPIT (DEVELOPMENT)
# =============================================================================
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SMTP_AUTH=false
MAIL_SMTP_STARTTLS=false
APP_EMAIL_FROM=noreply@template.com
APP_EMAIL_VERIFICATION_URL=http://localhost:8080/api/auth/verify-email

# =============================================================================
# MAILPIT CONFIGURATION
# =============================================================================
MAILPIT_SMTP_PORT=1025
MAILPIT_WEB_PORT=8025

# =============================================================================
# VERIFICATION TOKEN SETTINGS
# =============================================================================
APP_VERIFICATION_TOKEN_VALIDITY=24

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_EXPIRATION=86400000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING_WEB=INFO
LOG_LEVEL_SPRING_SECURITY=DEBUG
LOG_LEVEL_HIBERNATE_SQL=DEBUG
LOG_LEVEL_HIBERNATE_BINDER=TRACE
LOG_LEVEL_FLYWAY=DEBUG
LOG_LEVEL_MAIL=DEBUG

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=8080