<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress all checks for test files -->
    <suppress files="[/\\]src[/\\]test[/\\]" checks=".*"/>
    <suppress files=".*[/\\]Test\.java$" checks=".*"/>
    <suppress files=".*Test\.java$" checks=".*"/>

    <!-- Suppress ALL checks for main source files - focus on real bugs (SpotBugs/PMD) not style -->
    <suppress files="[/\\]src[/\\]main[/\\]java[/\\]" checks=".*"/>
</suppressions>